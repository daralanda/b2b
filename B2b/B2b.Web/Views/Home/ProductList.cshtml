@using System.Configuration;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string Domain = Context.Request.Scheme + "://" + this.Context.Request.Host.Value;
}


<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-sm-12" style=" text-align: right;">
                    <a onclick='btnClick(this)' id="new" class="btn btn-primary insert text-white pull-right insert" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="mdi mdi-plus-circle mr-1"></i> Yeni Ürün Ekle</a>
                </div>
            </div>

            <table class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;" id="datatables">
                <thead>
                    <tr>
                        <th>Ürün Kodu</th>
                        <th>Ürün Adı</th>
                        <th>Kategori</th>
                        <th>Marka</th>
                        <th>Stok Durumu</th>
                        <th>Durumu</th>
                        <th width="95px"></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div> <!-- end col -->
@section scripts {
    <!-- JsGrid js -->
    <link href="@Domain/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="@Domain/assets/libs/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="@Domain/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="@Domain/assets/libs/dropzone/dropzone.css" rel="stylesheet" type="text/css" />

    <script src="@Domain/assets/libs/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="@Domain/assets/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <!-- Buttons examples -->
    <script src="@Domain/assets/libs/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="@Domain/assets/libs/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js"></script>
    <script src="@Domain/assets/libs/jszip/jszip.min.js"></script>
    <script src="@Domain/assets/libs/pdfmake/build/pdfmake.min.js"></script>
    <script src="@Domain/assets/libs/pdfmake/build/vfs_fonts.js"></script>
    <script src="@Domain/assets/libs/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="@Domain/assets/libs/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="@Domain/assets/libs/datatables.net-buttons/js/buttons.colVis.min.js"></script>
    <!-- Responsive examples -->
    <script src="@Domain/assets/libs/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="@Domain/assets/libs/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>

    <script src="@Domain/assets/libs/dropzone/dropzone-min.js"></script>

    <script src="@Domain/ControllerJs/Definitions/ProductList.js"></script>>
    <!-- Init js -->
}

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-xl modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="accordion" id="accordionExample">
                        <div class="accordion-item active">
                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button fw-medium" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Ürün Ana Bilgileri
                                </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <label for="name">Ürün Adı</label>
                                                <input type="text" class="form-control" id="ProductName" placeholder="Ürün Adı">
                                            </div>
                                            <div class="form-group">
                                                <label for="name">Kategori</label>
                                                <select id="CategoryId" class="form-control">
                                                    <option value="0">Seçiniz</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="name">Stok</label>
                                                <input type="number" class="form-control" id="StockQuantity" placeholder="Stok">
                                            </div>
                                            <div class="form-group">
                                                <label for="name">Vergi</label>
                                                <input type="number" class="form-control" id="Vat" placeholder="Vergi">
                                            </div>

                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <label for="name">Ürün Kodu</label>
                                                <input type="text" class="form-control" id="ProductCode" placeholder="Ürün Kodu">
                                            </div>
                                            <div class="form-group">
                                                <label for="name">Marka</label>
                                                <select id="BrandId" class="form-control">
                                                    <option value="0">Seçiniz</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="name">Para Birimi</label>
                                                <select id="CurrencyId" class="form-control">
                                                    <option value="0">Seçiniz</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="name">Durumu</label>
                                                <select id="IsActive" class="form-control">
                                                    <option value="0">Pasif</option>
                                                    <option value="1">Aktif</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-12 col-sm-12">
                                            <div class="form-group">
                                                <label for="name">Ürün Açıklaması</label>
                                                <textarea type="text" class="form-control" rows="1" id="Description" placeholder="Ürün Açıklaması"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingThree">
                                <button class="accordion-button fw-medium collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    Ürün Fiyat Bilgileri
                                </button>
                            </h2>
                            <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-4 col-sm-12">
                                            <div class="mb-3">
                                                <label for="formrow-inputState" class="form-label">Birim</label>
                                                <select id="unitType" class="form-select"></select>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-sm-12">
                                            <div class="mb-3">
                                                <label for="formrow-inputCity" class="form-label">Fiyat</label>
                                                <input type="number" class="form-control" id="Price" placeholder="">
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-sm-12">
                                            <div class="mb-3">
                                                <label for="formrow-inputZip" class="form-label">Varsayılan Mı?</label>
                                                <select id="IsDefault" class="form-select">
                                                    <option value="0">Hayır</option>
                                                    <option value="1">Evet</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-lg-2 col-sm-12">
                                            <div class="mb-3">
                                                <label for="formrow-inputZip" class="form-label">.</label>
                                                <a id="addRowPrice" class="btn btn-primary text-white pull-left spc-form-btn mt-4">Yeni Satır Ekle</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <table class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;" id="priceTable">
                                            <thead>
                                                <tr>
                                                    <th>Birim</th>
                                                    <th>Fiyat</th>
                                                    <th>Varsayılan</th>
                                                    <th width="40px"></th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingTwo">
                                <button class="accordion-button fw-medium collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    Resimler
                                </button>
                            </h2>
                            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-12">
                                            <div class="mb-3">
                                                <label for="formrow-inputState" class="form-label">Resim</label>
                                                <div class="custom-file">
                                                    <input type="file" onchange="FileUpload(this)" class="form-control" id="ImgUrl">
                                                    <label class="custom-file-label" for="ImgUrl" id="ImageUrl"></label>
                                                    <div id="SilinecekResimler"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-sm-12">
                                            <div class="mb-3">
                                                <label for="formrow-inputCity" class="form-label">Sıra No</label>
                                                <input type="number" class="form-control" id="Queue" placeholder="">
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-sm-12">
                                            <div class="mb-3">
                                                <label for="formrow-inputZip" class="form-label">. </label>
                                                <a id="addRowImage" class="btn btn-primary text-white pull-left spc-form-btn mt-4">Yeni Satır Ekle</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <table class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;" id="imageTable">
                                            <thead>
                                                <tr>
                                                    <th>Resim</th>
                                                    <th>Sıra No</th>
                                                    <th width="40"></th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    
      
                    
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" onclick="PostData(this)" class="btn btn-primary" id="btnSumbit">Kaydet</button>
            </div>
        </div>
    </div>
</div>