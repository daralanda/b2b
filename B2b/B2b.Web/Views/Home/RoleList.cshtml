@using System.Configuration;

@{
    ViewData["Title"] = "Kullanıcı Grupları";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string Domain = this.Context.Request.Scheme + "://" + this.Context.Request.Host.Value;
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-sm-12" style=" text-align: right;">
                    <a onclick='btnClick(this)' id="new" class="btn btn-primary insert text-white pull-right" data-toggle="modal" data-target="#exampleModal"><i class="mdi mdi-plus-circle mr-1"></i> Yeni Yetki Grubu Ekle</a>
                </div>
            </div>

            <table class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;" id="datatables">
                <thead>
                    <tr>
                        <th>Yetki Grub Adı</th>
                        <th>Aktif Durumu</th>
                        <th width="75px"></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div>

@section scripts {
    <!-- JsGrid js -->
    <link href="@Domain/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="@Domain/assets/libs/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="@Domain/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <script src="@Domain/assets/libs/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="@Domain/assets/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <!-- Buttons examples -->
    <script src="@Domain/assets/libs/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="@Domain/assets/libs/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js"></script>
    <script src="@Domain/assets/libs/jszip/jszip.min.js"></script>
    <script src="@Domain/assets/libs/pdfmake/build/pdfmake.min.js"></script>
    <script src="@Domain/assets/libs/pdfmake/build/vfs_fonts.js"></script>
    <script src="@Domain/assets/libs/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="@Domain/assets/libs/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="@Domain/assets/libs/datatables.net-buttons/js/buttons.colVis.min.js"></script>
    <!-- Responsive examples -->
    <script src="@Domain/assets/libs/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="@Domain/assets/libs/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>
    <script src="@Domain/ControllerJs/UserGroup/RoleList.js"></script>>
    <!-- Init js -->
}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" >
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label for="name">Yetki Grup Adı</label>
                            <input type="text" class="form-control" id="rolename" placeholder="Yetki Grup Adı">
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12">
                        <div class="form-group">
                            <label for="category"> Aktif Durumu</label>
                            <select id="isactive" class="form-control">
                                <option value="0"> Pasif</option>
                                <option value="1"> Aktif</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="category">Kategori</label>
                            <select id="category" class="form-control" onchange="DataFind()"></select>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="form-row">
                    <div class="table-responsive">
                        <table class="table table-bordered mb-0" id="plugin-datatable">
                            <thead>
                                <tr>
                                    <th>Güvenlik Nesnesi Adı</th>
                                    <th>Görme  <i class="fe-eye"></i></th>
                                    <th>Güncelleme <i class="fe-arrow-up-circle"></i></th>
                                    <th>Ekleme<i class="fe-plus"></i></th>
                                    <th>Silme<i class="fe-delete"></i></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" onclick="PostData(this)" class="btn btn-primary" id="btnSumbit">Kaydet</button>
            </div>
        </div>
    </div>
</div>