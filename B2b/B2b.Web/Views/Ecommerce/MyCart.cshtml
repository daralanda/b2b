@using System.Configuration;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string Domain = Context.Request.Scheme + "://" + this.Context.Request.Host.Value;
}
<div class="row">
    <div class="col-xl-8">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle mb-0 table-nowrap">
                        <thead class="table-light">
                            <tr>
                                <th>Ürün</th>
                                <th>Ürün Bilgileri</th>
                                <th>Fiyat</th>
                                <th>Adet</th>
                                <th colspan="2">Toplam</th>
                            </tr>
                        </thead>
                        <tbody id="MyCartContent">

                       </tbody>
                    </table>
                </div>
                <div class="row mt-4">

                    <div class="col-sm-12">
                        <div class="text-sm-end mt-2 mt-sm-0">
                            <a href="/odeme" class="btn btn-success">
                                <i class="mdi mdi-cart-arrow-right me-1"></i> Checkout
                            </a>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row-->
            </div>
        </div>
    </div>
    <div class="col-xl-4">

        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-3">
                    Sipariş Özeti
                </h4>

                <div class="table-responsive">
                    <table class="table mb-0">
                        <tbody>
                            <tr>
                                <td>Toplam Tutar :</td>
                                <td id="cart-subtotal"></td>
                            </tr>
                            <tr>
                                <td>Toplam İndirim : </td>
                                <td id="cart-discount"></td>
                            </tr>
                            <tr>
                                <td>Kdv  :</td>
                                <td id="cart-tax"></td>
                            </tr>
                            <tr class="bg-light">
                                <th>Genel Toplam :</th>
                                <th id="cart-total"></th>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- end table-responsive -->
            </div>
        </div>
        <!-- end card -->
    </div>
</div>

@section scripts {
    <script src="@Domain/controllerjs/home/Cart.js"></script>
}


