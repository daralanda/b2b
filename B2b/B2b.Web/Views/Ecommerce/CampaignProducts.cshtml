@using System.Configuration;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string Domain = Context.Request.Scheme + "://" + this.Context.Request.Host.Value;
}



<div class="row">
    <div class="col-lg-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Kategoriler</h4>

                <div>
                    <ul class="list-unstyled product-list" id="category-list">
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <div class="col-lg-9">
        <div class="row mb-5">
            <div class="col-lg-12 col-sm-12">
                <div class="search-box me-2">
                    <div class="position-relative">
                        <input type="text" class="form-control border-0" id="searchInput" autocomplete="off" placeholder="Ürün Ara...">
                        <i class="bx bx-search-alt search-icon"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" id="product-list">
        </div>
        <div id="pagination-container"></div>

        <!-- end row -->
    </div>
</div>
<!-- end row -->
@section scripts {
    <link rel="stylesheet" href="@Domain/assets/libs/paginationjs/pagination.css">
    <script src="@Domain/assets/libs/paginationjs/pagination.min.js"></script>
    <script src="@Domain/controllerjs/home/CampaignProducts.js"></script>
}

